<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sustainability"
        tools:targetApi="31">
        <activity
            android:name=".view.ResultsView"
            android:exported="true" />
        <activity
            android:name=".view.GetStartedCalculator"
            android:exported="true" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".model.usecases.CarbonFootprintCalculator"
            android:exported="true"/>
        <activity
            android:name=".ui.navigation.NavigationActivity"
            android:exported="true" />
        <activity
            android:name=".view.GetStartedCarbonFootprint"
            android:exported="true" />
        <activity android:name=".ui.navigation.NavigationFragment" />
        <activity android:name=".view.MainLogin" />
        <activity android:name="com.ams.sustainability.model.usecases.RestorePasswordActivity" />
        <activity android:name="com.ams.sustainability.model.usecases.RegisterActivity" />
        <activity android:name="com.ams.sustainability.model.usecases.LoginResult" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>