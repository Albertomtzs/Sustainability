<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.usecases.LoginResult">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_bkndlsBackendlessUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_BackendlessUserInfo"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:layout_editor_absoluteX="6dp" />

        <EditText
            android:id="@+id/editText_bkndlsBackendlessUserInfo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:ems="10"
            android:inputType="none"
            android:lines="9"
            android:scrollIndicators="top|bottom"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:text="@string/editText_BackendlessUserInfo"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_bkndlsBackendlessLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="@string/btn_LogoutBackendless"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>

